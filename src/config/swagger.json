  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "apiError": {
        "type": "object",
        "required": ["success", "error"],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "error": {
            "type": "string"
          }
        }
      },
      "apiMessage": {
        "type": "object",
        "required": ["success", "message"],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "userCreation": {
        "type": "object",
        "required": ["username", "password", "email"],
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "loginBody": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "loginResponse": {
        "type": "object",
        "required": ["success", "data"],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "object",
            "required": ["userId", "email", "token"],
            "properties": {
              "userId": { "type": "number" },
              "email": { "type": "string" },
              "token": { "type": "string" }
            }
          }
        }
      },
      "User": {
        "type": "object",
        "required": [
          "id",
          "username",
          "email",
          "balance",
          "avatar",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "id": { "type": "number" },
          "username": { "type": "string" },
          "email": { "type": "string" },
          "balance": { "type": "string" },
          "avatar": { "type": "string" },
          "createdAt": { "type": "string" },
          "updatedAt": { "type": "string" }
        }
      },
      "UserModification": {
        "type": "object",
        "required": ["username", "email"],
        "properties": {
          "username": { "type": "string" },
          "email": { "type": "string" }
        }
      },
      "UserGet": {
        "type": "object",
        "required": ["success", "data"],
        "properties": {
          "success": { "type": "boolean" },
          "data": { "$ref": "#/components/schemas/User" }
        }
      },
      "UserList": {
        "type": "object",
        "required": ["success", "data"],
        "properties": {
          "success": { "type": "boolean" },
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/User" }
          }
        }
      },
      "ChangePasswordBody": {
        "type": "object",
        "required": ["oldPassword", "newPassword", "passwordConfirmation"],
        "properties": {
          "oldPassword": { "type": "string" },
          "newPassword": { "type": "string" },
          "passwordConfirmation": { "type": "string" }
        }
      },
      "Product": {
        "type": "object",
        "required": [
          "id",
          "name",
          "price",
          "stock",
          "image",
          "barcode",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "id": { "type": "number" },
          "name": { "type": "string" },
          "price": { "type": "number" },
          "stock": { "type": "number" },
          "image": { "type": "string" },
          "barcode": { "type": "string" },
          "createdAt": { "type": "string" },
          "updatedAt": { "type": "string" }
        }
      },
      "ProductModification": {
        "type": "object",
        "required": ["name", "price", "stock", "barcode"],
        "properties": {
          "name": { "type": "string" },
          "price": { "type": "number" },
          "stock": { "type": "number" },
          "barcode": { "type": "string" }
        }
      },
      "ProductGet": {
        "type": "object",
        "required": ["success", "data"],
        "properties": {
          "success": { "type": "boolean" },
          "data": { "$ref": "#/components/schemas/Product" }
        }
      },
      "ProductList": {
        "type": "object",
        "required": ["success", "data"],
        "properties": {
          "success": { "type": "boolean" },
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Product" }
          }
        }
      },
      "History": {
        "type": "object",
        "required": [
          "id",
          "description",
          "movement",
          "ProductId",
          "UserId",
