{
  "openapi": "3.0.3",
  "info": {
    "title": "Monix Documentation API",
    "version": "1.0",
    "description": "La documentation du backend de monix (le logiciel de gestion de crédits du club nix)"
  },
  "tags": [
    {
      "name": "Authentification",
      "description": "Tout ce qui est lié a l'authentification"
    }
  ],

  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Connecte l'utilisateur",
        "requestBody": {
          "description": "L'utilisateur a créer'",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/loginBody"
              }
            }
          }
        },
        "responses": {
          "default": {
            "description": "Une erreur a eu lieu",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/apiError"
                }
              }
            }
          },
          "201": {
            "description": "L'utilisateur a ete cree",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/loginResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/signup": {
      "post": {
        "summary": "Crée un utilisateur",
        "requestBody": {
          "description": "L'utilisateur a créer'",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/userCreation"
              }
            }
          }
        },
        "responses": {
          "default": {
            "description": "Une erreur a eu lieu",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/apiError"
                }
              }
            }
          },
          "201": {
            "description": "L'utilisateur a ete cree",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/loginResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "apiError": {
        "type": "object",
        "required": ["success", "error"],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "error": {
            "type": "string"
          }
        }
      },
      "userCreation": {
        "type": "object",
        "required": ["username", "password", "email"],
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        }
      },
      "loginBody": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "loginResponse": {
        "type": "object",
        "required": ["success", "data"],
        "properties": {
          "success": {
            "type": "boolean"
          },
          "data": {
            "type": "object",
            "required": ["userId", "email", "token"],
            "properties": {
              "userId": { "type": "number" },
              "email": { "type": "string" },
              "token": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
